# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Store Configuration
NEXT_PUBLIC_STORE_NAME=Your Store Name
NEXT_PUBLIC_STORE_DESCRIPTION=Quality products at great prices
NEXT_PUBLIC_CURRENCY=USD

# Features
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_SHOW_STOCK_COUNT=true
NEXT_PUBLIC_LOW_STOCK_THRESHOLD=10

# n8n Webhook Integration (optional)
# When configured, order data will be sent to this webhook URL after checkout
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
